{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "moduleResolution": "Node",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  },
  "ts-node": {
    "esm": true
  },
  "exclude": ["client", "node_modules", "public", "src/**/*.test.ts"],
  "$schema": "https://json.schemastore.org/tsconfig",
  "display": "Recommended"
}
